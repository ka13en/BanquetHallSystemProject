<Window
    x:Class="Banquet_Hall_App.Views.NewClientView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Banquet_Hall_App.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NewClientView"
    Width="250"
    Height="245"
    d:DataContext="{d:DesignInstance d:Type=local:ClientsViewModel}"
    Background="#FF222222"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Grid Width="250" Height=" 245">
        <StackPanel>
            <Label
                Name="clientLabel"
                Height="42"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="New client"
                FontSize="20"
                Foreground="White" />

            <Label
                Name="ClientNameLabel"
                Width="178"
                Height="30"
                Margin="0,5,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                Content="Name"
                FontSize="17"
                Foreground="White" />
            <TextBox
                Name="ClientNameTextBox"
                Width="178"
                Height="25"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Text="{Binding ClientInfo.Name}" />
            <Label
                Width="178"
                Margin="0,5,0,0"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="Phone number"
                FontSize="17"
                Foreground="White" />
            <TextBox
                Name="ClientPhoneNumberTextBox"
                Width="178"
                Height="25"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Text="{Binding ClientInfo.PhoneNumber}" />
            <Button
                Name="AddClientButton"
                Width="178"
                Height="35"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Command="{Binding AddClientCommand}"
                Content="Add client"
                FontSize="20" />
        </StackPanel>
    </Grid>
</Window>
